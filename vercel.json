{
    "builds": [
        {
            "src": "**/*.html",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "/$1"
        }
    ],
    "build": {
        "env": {
            "KAKAO_MAP_API_KEY": "@kakao_map_api_key",
            "BACKEND_API_URL": "@backend_api_url"
        }
    },
    "buildCommand": "sed -i 's/__KAKAO_MAP_API_KEY__/'\"$KAKAO_MAP_API_KEY\"'/g; s#__BACKEND_API_URL__#'\"$BACKEND_API_URL\"'#g' src/js/config.js"
}